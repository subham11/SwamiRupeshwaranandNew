# Frontend Environment Variables - Example
# Copy this file to .env.local and update the values

# API Configuration - Base URL WITHOUT /api/v1 suffix
# Local: http://localhost:2026
# Production: https://x3cgcqhhub.execute-api.ap-south-1.amazonaws.com/dev
NEXT_PUBLIC_API_URL=http://localhost:2026

# Enable API fetching
# Set to 'true' to fetch content from backend API
# Set to 'false' to use static/local content (default for development)
NEXT_PUBLIC_USE_API=false

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3040
NEXT_PUBLIC_SITE_NAME=Swami Rupeshwaranand Ji

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_DONATIONS=true
NEXT_PUBLIC_ENABLE_AUTH=true

# AWS Amplify (set automatically during Amplify build)
# AMPLIFY_BUILD=true
