# Environment Configuration
NODE_ENV=development

# Database Selection
# - In development: MongoDB is used by default (when MONGODB_URI is set)
# - In production: DynamoDB is used
# Set USE_MONGODB=true to force MongoDB, or leave unset for auto-detection
USE_MONGODB=true

# AWS Configuration (for DynamoDB in production)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DynamoDB Configuration (used in production)
DYNAMODB_TABLE_PREFIX=swami-rupeshwaranand-api-local
DYNAMODB_ENDPOINT=http://localhost:8000

# MongoDB Configuration (used for local development)
MONGODB_URI=mongodb://localhost:27017/

# Cognito Configuration
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
COGNITO_REGION=ap-south-1

# API Configuration
API_PORT=3001
API_PREFIX=api/v1

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_TITLE=Swami Rupeshwaranand API
SWAGGER_DESCRIPTION=Backend API for Swami Rupeshwaranand website
SWAGGER_VERSION=1.0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# SMTP Email Configuration
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@domain.com
SMTP_FROM_NAME=Your App Name,http://localhost:3001

# Razorpay Configuration (Payment Gateway)
# Get keys from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
# Webhook secret from Razorpay Dashboard > Webhooks
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
